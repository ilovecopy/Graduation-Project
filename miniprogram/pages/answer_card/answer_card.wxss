page {
  background-color: #f7f8fa;
}

.user-info {
  margin: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.nick-name {
  margin-left: 20rpx;
}

.block {
  margin: 20rpx;
}

.result-name {
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
}

.result-desc {
  width: 100%;
  font-size: 24rpx;
}

.result-score {
  text-align: center;
  font-size: 98rpx;
  font-weight: bold;
  color: #60C5A0;
  padding: 20rpx 0;
}

.result-detail {
  color: #a9a9a9;
  font-size: 24rpx;
  text-align: center;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.result-green {
  color: #60C5A0;
  font-size: 36rpx;
}

.result-red {
  color: #E7645D;
  font-size: 36rpx;
}

.result-blue {
  color: #4A7BEE;
  font-size: 36rpx;
}

.main {
  widows: 100%;
  display: flex;
  flex-direction: column;
}

.record-box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 720rpx;
  margin: 0rpx 15rpx 0rpx 15rpx;
}

.record {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-width: 2rpx;
  border-style: solid;
  border-radius: 42rpx;
  background-color: #cfd4d8;
  color: #ffffff;
  margin: 25rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.record_true {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-width: 2rpx;
  border-style: solid;
  border-radius: 42rpx;
  background-color: #60C5A0;
  color: #ffffff;
  margin: 25rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.record_false {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-width: 2rpx;
  border-style: solid;
  border-radius: 42rpx;
  background-color: #E7645D;
  color: #ffffff;
  margin: 25rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.record_selected{
  width: 70rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-width: 2rpx;
  border-style: solid;
  border-radius: 42rpx;
  background-color: #4C7AF4;
  color: #ffffff;
  margin: 25rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.scroll-view {
  height: 100%;
}

.answer {
  font-size: 28rpx;
}